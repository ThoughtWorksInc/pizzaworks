<header ic-include='{"status":"$status"}'>
    <h1>pizzas deployed by pipeline</h1>
    <form id="pizza-form" ic-post-to="/pizzas">
        <input id="new-pizza" placeholder="What is the name of this pizza?" name="pizza-name" pattern=".{4,}" required
               title="> 3 chars" autofocus>
    </form>
</header>

<section id="main">
    <ul id="pizza-list">
        #foreach($pizza in $pizzas)
            <li>
                <div class="view">
                    <label ic-get-from="/pizzas/$pizza.id/edit" ic-target="closest li" ic-trigger-on="dblclick"
                           ic-replace-target="true">$pizza.name</label>
                    <button class="destroy" ic-delete-from="/pizzas/$pizza.id">X</button>
                </div>
            </li>
        #end
    </ul>
</section>

<footer>
    <span id="pizza-count">
        <strong>$count</strong> pizzas in total
    </span>
</footer>